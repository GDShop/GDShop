<div id="page-wrapper" class="page-wrapper-cls">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-head-line">Thêm Nhân Viên</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6" style="width:100%;">

                <div class="panel panel-default">

                    <div class="panel-heading">
                        Điền Thông Tin Nhân Viên
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("InsertShipCar", "BaoMatRatCao", new { thongbao =""}))
                        {

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Biển Số Xe</label>
                                    <input type="number" class="form-control" id="txtBSX" name="txtBSX" value="" />
                                </div>
                                <div class="form-group">
                                    <label>Chọn Nhân Viên</label>
                                    <select id="slLoai" name="slLoai" class="form-control">
                                        @foreach (var item in @ViewBag.getT)
                                        {
                                            <option value="@item.id">@Html.Action("TenNhanVien", "BaoMatRatCao", new { id = @item.id })</option>
                                        }
                                    </select>
                                </div>
                            <div class="clearfix"></div>
                            <hr />
                            <button style="float:right;" type="submit" class="btn btn-default"><i class="fa fa-floppy-o"></i> Lưu</button>
                        }
                        <a style="float:left;" href="@Url.Action("GiaoHang","BaoMatRatCao")" class="btn btn-default" id="back"><i class="fa fa-arrow-left"></i> Quay Lại</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
