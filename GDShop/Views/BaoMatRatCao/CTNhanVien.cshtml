@using GDShop.GDWebservice;
@model NhanVien
@{
    ViewBag.Title = "Chi Tiết Nhân Viên";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<nav class="navbar-default navbar-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav" id="main-menu">
            <li>
                <div class="user-img-div">
                    <img src="~/Content/Admin/img/user.jpg" class="img-circle" />

                </div>

            </li>
            <li>
                <a> <strong> Quản Lý </strong></a>
            </li>

            <li>
                <a href="@Url.Action("Index","BaoMatRatCao")"><i class="fa fa-dashboard "></i>Sản Phẩm</a>
            </li>
            <li>
                <a href="@Url.Action("ThongTin","BaoMatRatCao", new { ten = "", diachi = "", sdt = "", i = 0, id = 0 })"><i class="fa fa-align-left"></i>Thông Tin</a>
            </li>
            <li>
                <a class="active-menu" href="@Url.Action("KhachHang","BaoMatRatCao")"><i class="fa fa-users"></i>Khách Hàng</a>
            </li>
            <li>
                <a id="nhanvien" href="@Url.Action("NhanVien","BaoMatRatCao")"><i class="fa fa-users"></i>Nhân Viên</a>
            </li>
            <li>
                <a href="@Url.Action("DonDathang","BaoMatRatCao")"><i class="fa fa-calendar-check-o"></i>Đơn Đặt Hàng</a>
            </li>
            <li>
                <a href="@Url.Action("HoaDonBan","BaoMatRatCao")"><i class="fa fa-book"></i>Hóa Đơn</a>
            </li>
            <li>
                <a href="@Url.Action("GiaoHang","BaoMatRatCao")"><i class="fa fa-truck"></i>Giao Hàng</a>
            </li>
            <li>
                <a href="@Url.Action("HoaDonNhap","BaoMatRatCao")"><i class="fa fa-book"></i>Hóa Đơn Nhập Hàng</a>
            </li>
            <li>
                <a href="@Url.Action("KhoHang","BaoMatRatCao")"><i class="fa fa-server"></i>Kho Hàng</a>
            </li>
            <li>
                <a href="@Url.Action("ThongKe","BaoMatRatCao")"><i class="fa fa-bar-chart"></i>Thống Kê</a>
            </li>


        </ul>
    </div>

</nav>
<div id="page-wrapper" class="page-wrapper-cls">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-head-line">Chi Tiết Nhân Viên</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6" style="width:100%;">

                <div class="panel panel-default">

                    <div class="panel-heading">
                        Thông Tin Sản Phẩm
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("UpdateCTNV", "BaoMatRatCao", new { id = Model.id }))
                        {
                            <div style="width:45%; float:left;">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">ID</label>
                                    <input type="text" class="form-control" id="txtID" name="txtID" value="@Model.id" disabled />
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tên Khách Hàng</label>
                                    <input type="text" class="form-control" id="txtTenKH" name="txtTenKH" value="@Model.tennv" />
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Địa Chỉ</label>
                                    <input type="text" class="form-control" id="txtDiaChi" name="txtDiaChi" value="@Model.diachi" />
                                </div>
                                <div class="form-group">
                                    <label>Loại</label>
                                    <select id="slLoai" name="slLoai" class="form-control">
                                        @foreach (var item in @ViewBag.getT)
                                        {
                                            <option value="@item.id">@item.tenchucvu</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Số Điện Thoại</label>
                                    <input type="number" class="form-control" id="txtSdt" name="txtSdt" value="@Model.sdt" />
                                </div>
                            </div>
                            <div style="width:45%; float:right;">
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Tài Khoản</label>
                                    <input type="text" class="form-control" id="txtEmail" name="txtEmail" value="@Model.taikhoan" disabled />
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Mật Khẩu</label>
                                    <input type="text" class="form-control" id="txtDiaChi" name="txtDiaChi" value="@Model.matkhau" disabled />
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Mật Khẩu Đổi</label>
                                    <input type="password" class="form-control" id="txtMatKhau" name="txtMatKhau" value="" />
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <hr />
                            <button style="float:right;" type="submit" class="btn btn-default"><i class="fa fa-floppy-o"></i> Lưu</button>
                        }
                        <a style="float:left;" href="@Url.Action("NhanVien","BaoMatRatCao")" class="btn btn-default" id="back"><i class="fa fa-arrow-left"></i> Quay Lại</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>

    $("#slLoai").val('@ViewBag.t.id');
    if ('@ViewBag.thongbao' != "")
        alert('@ViewBag.thongbao');
</script>
