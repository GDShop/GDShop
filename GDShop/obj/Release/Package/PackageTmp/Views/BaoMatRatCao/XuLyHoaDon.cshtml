            </li>


        </ul>
    </div>

</nav>

<div id="page-wrapper" class="page-wrapper-cls">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12" style="display:inline;">
                <h1 class="page-head-line">Chuyển Hàng</h1>

            </div>
        </div>

        <div class="row">
            <div class="col-md-6" style="width:100%;">
                <!--    Context Classes  -->
                <div class="panel panel-default">

                    <div class="panel-heading">
                        Chuyển Hóa Đơn Cho Xe Giao Hàng
                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <div class="btn-group">
                                <label>Mã Hóa Đơn: @ViewBag.idhoadon</label>
                                @using (Html.BeginForm("ChuyenHoaDon", "BaoMatRatCao", new { id = @ViewBag.idhoadon }))
                                {
                                    <select id="ChonXe" name="ChonXe" class="form-control">
                                        @foreach (var item in @Model)
                                        {
                                            <option value="@item.id">Biển Số Xe: @item.biensoxe - @Html.Action("TimTenNVTheoID", "BaoMatRatCao", new { id = @item.idnhanvien })</option>
                                        }
                                    </select>
                                    <button type="submit" id="btnSubmit"><i class="fa fa-truck"></i></button>
                                }
                                
                            </div>
                        </div>
                    </div>
                </div>
                <!--  end  Context Classes  -->
            </div>
        </div>

    </div>
    <!-- /. PAGE INNER  -->
</div>

