@using GDShop.GDWebservice;
@using PagedList.Mvc;
@using PagedList;
@model PagedList<KhoHang>
@{
    ViewBag.Title = "Quản Lý Kho Hàng";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<nav class="navbar-default navbar-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav" id="main-menu">
            <li>
                <div class="user-img-div">
                    <img src="~/Content/Admin/img/user.jpg" class="img-circle" />

                </div>

            </li>
            <li>
                <a> <strong> Quản Lý </strong></a>
            </li>

            <li>
                <a href="@Url.Action("Index","BaoMatRatCao")"><i class="fa fa-dashboard "></i>Sản Phẩm</a>
            </li>
            <li>
                <a href="@Url.Action("ThongTin","BaoMatRatCao", new { ten = "", diachi = "", sdt = "", i = 0, id = 0 })"><i class="fa fa-align-left"></i>Thông Tin</a>
            </li>
            <li>
                <a href="@Url.Action("KhachHang","BaoMatRatCao")"><i class="fa fa-users"></i>Khách Hàng</a>
            </li>
            <li>
                <a id="nhanvien" href="@Url.Action("NhanVien","BaoMatRatCao")"><i class="fa fa-users"></i>Nhân Viên</a>
            </li>
            <li>
                <a href="@Url.Action("DonDathang","BaoMatRatCao")"><i class="fa fa-calendar-check-o"></i>Đơn Đặt Hàng</a>
            </li>
            <li>
                <a href="@Url.Action("HoaDonBan","BaoMatRatCao")"><i class="fa fa-book"></i>Hóa Đơn</a>
            </li>
            <li>
                <a href="@Url.Action("GiaoHang","BaoMatRatCao")"><i class="fa fa-truck"></i>Giao Hàng</a>
            </li>
            <li>
                <a href="@Url.Action("HoaDonNhap","BaoMatRatCao")"><i class="fa fa-book"></i>Hóa Đơn Nhập Hàng</a>
            </li>
            <li>
                <a class="active-menu" href="@Url.Action("KhoHang","BaoMatRatCao")"><i class="fa fa-server"></i>Kho Hàng</a>
            </li>
            <li>
                <a href="@Url.Action("ThongKe","BaoMatRatCao")"><i class="fa fa-bar-chart"></i>Thống Kê</a>
            </li>


        </ul>
    </div>

</nav>
<div id="page-wrapper" class="page-wrapper-cls">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-head-line">Quản Lý Sản Phẩm</h1>
            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm("ExportData", "ExportData", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID Sản Phẩm</th>
                        <th>Tên Sản Phẩm</th>
                        <th>Size</th>
                        <th>Số Lượng</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <th>@item.id</th>
                            <th>@Html.Action("TimTenSPTheoID", "BaoMatRatCao", new { id = item.idsanpham })</th>
                            <th>@item.size</th>
                            <th>@item.soluong</th>
                        </tr>
                    }

                </tbody>

            </table>
            <input type="submit" name="btnExportLicensing" style="width: 140px;"
                   value="Export" id="exportLicensing" class="button" />
            }
            <div class="clearfix"></div>
            <div class="MenuPage" style="display:inline;">
                @Html.PagedListPager(Model, page => Url.Action("KhoHang", "BaoMatRatCao", new { @page = page }))
            </div>
        </div>
    </div>
</div>

